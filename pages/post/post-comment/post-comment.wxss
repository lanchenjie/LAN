/* pages/post/post-comment/post-comment.wxss */
.container{
  position: absolute;
  top:0;
  left: 0;
  bottom: 0;
  right: 0;
  overflow-y: hidden;
}

.comment-box{
  position: absolute;
  top:0;
  left: 0;
  bottom: 100rpx;
  right: 0;
  overflow-y: auto;
}

.comment-count{
  height: 80rpx;
  line-height: 80rpx;
  font-size: 28rpx;
  color: #333;
  margin: 10rpx 0 20rpx 20rpx;
  border-bottom: 1px solid #ccc;
}
.comment-item{
  padding:40rpx 20rpx 20rpx 20rpx;
  border-bottom: 1rpx solid #f2e7e1;
  margin-left: 20rpx;
}
.comment-item-header{
  display: flex;
  flex-direction: row;
  align-items:center;
}
.comment-item-header image{
  width: 80rpx;
  height: 80rpx;
  margin-right: 20rpx;
}
.comment-item-body{
  margin: 10rpx 0;
}
.comment-txt{
  font-size: 24rpx;
  color:#666 ;
  line-height: 40rpx;
}
.comment-img{
  margin: 10rpx 0;
}
.comment-img image{
  width: 220rpx;
  height: 220rpx;
  max-width: 32%;
  margin-right: 10rpx;
}
.comment-voice{
  border: 1rpx solid #ccc;
  border-radius: 10rpx;
  width: 220rpx;
  height: 64rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
}
.comment-voice image{
  width: 50rpx;
  height: 50rpx;
  margin-left: 10rpx;
}
.comment-voice text{
  font-size: 22rpx;
  margin-left: 20rpx;
}
.comment-item-footer{
  font-size: 24rpx;
  color:#ccc;
}

/*****操作*****/
.input-box{
  position:absolute;
  left: 0;
  right: 0;
  bottom: 0;
  min-height: 100rpx;
  background-color: #eae8e8;
  border-top: 1rpx solid #d5d5d5;
}
.send-comment{
  display: flex;
  flex-direction: row;
  align-items:center;
  width: 100%;
  height: 100%;
  padding: 20rpx 5rpx;
}
.input-item{
  display: flex;
  flex-direction: row;
  align-items: center;
  width: 70%;
  height: 70rpx;
}
.input-item input{
  background-color: #fff;
  border: 1rpx solid #d5d5d5;
  border-radius: 5rpx;
  font-size: 24rpx;
  color: #666;
  padding: 0 10rpx;
  flex: 1;
}
.send-comment image{
  width: 60rpx;
  height: 70rpx;
  margin-left: 10rpx;
  margin-right: 10rpx;
}
.submit-btn{
  background-color: #4a6141;
  width: 130rpx;
  height: 60rpx;
  color:#fff;
  font-size: 24rpx;
  text-align: center;
  line-height: 70rpx;
}
.speak-input{
  text-align: center;
}
.speak-input.recording{
  background-color: #ccc;
}
/********选择照片和按钮区域*******/
.send-more{
  margin-left: 20rpx;
  margin-right: 20rpx;
  margin-bottom: 30rpx;
}
.send-more-btns{
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-bottom: 30rpx;
}
.btn-item{
  margin-right: 20rpx;
  width: 110rpx;
  height: 145rpx;
  text-align: center;
}
.btn-item-box{
  background-color: #fff;
  width: 60rpx;
  height: 60rpx;
  padding: 25rpx;
  border: 1rpx solid #d5d5d5;
  border-radius: 5rpx;
}
.btn-item-box image{
  width: 60rpx;
  height: 60rpx;
}
.btn-item-box text{
  font-size: 24rpx;
}
.send-more-imgs{
  display: flex;
  flex-direction: row;
  align-items: center;
}
.img-box{
  width: 160rpx;
  height: 160rpx;
  margin-right: 20rpx;
  position: relative;
}
.img-box image{
  width: 100%;
  height: 100%;
}
.img-box icon{
  position: absolute;
  right: 5rpx;
  top: 5rpx;
}